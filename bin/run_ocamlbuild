W=/workspace
# Create container
# BUILD="ocamlbuild -quite -use-ocamlfind cwtest.native"
BUILD="ocamlbuild -use-ocamlfind cwtest.native"
C=$(docker container create --rm -w $W ocaml:ocamlbuild sh -c "$BUILD && exec ./cwtest.native")

# Copy files
docker container cp ${1:-examples/basic}/. $C:$W

# Start
docker container start --attach $C